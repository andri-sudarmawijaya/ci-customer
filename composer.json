{
    "name": "andri-sudarmawijaya/ci-customer",
    "description": "CI Customer Package",
    "type": "codeigniter-package",
    "license": "MIT",
	"require": {
		"composer/installers": "~1.0"
	},
    "autoload": {
        "psr-4": {
            "AndriSudarmawijaya\\CiCustomer\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Andri Sudarmawijaya",
            "email": "andri.sudarmawijaya@gmail.com"
        }
    ],
    "minimum-stability": "dev",,
    "repositories": [{
        "type": "path",
        "url": "./vendor/**/"
    }],
    "scripts": {
        "post-install-cmd": [
            "@post-install"
        ],
        "post-install": [
            "touch foo2",
            "chmod 700 src/scripts/post-install.sh & sh src/scripts/post-install.sh"
        ],
        "post-update-cmd": [
            "@post-update"
        ],
        "post-update": [
            "touch bar2",
            "chmod 700 src/scripts/post-update.sh & sh src/scripts/post-update.sh"
        ]
    }
}
