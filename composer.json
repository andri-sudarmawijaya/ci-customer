{
    "name": "andri-sudarmawijaya/ci-customer",
    "description": "CI Customer Package",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andri Sudarmawijaya",
            "email": "andri.sudarmawijaya@gmail.com"
        }
    ],
	"require": {
        "slowprog/composer-copy-file": "~0.3"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "AndriSudarmawijaya\\CiCustomer\\": "src/"
        }
    },
    "scripts" : {
        "post-install-cmd": [
            "AndriSudarmawijaya\\Copyfile10\\Installer::postInstall"
        ],
        "post-update-cmd": [
            "php -r \"copy('config/local-example.php', './application/config/local.php');\"",
            "AndriSudarmawijaya\\Copyfile10\\Installer::postUpdate"
        ],
        "post-autoload-dump": [
            "AndriSudarmawijaya\\Copyfile10\\Installer::postAutoloadDump"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
